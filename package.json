{
  "name": "ai-site-starter",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "concurrently -n vite,api -c blue,green \"vite\" \"wrangler dev\"",
    "dev:web": "vite",
    "dev:api": "wrangler dev",
    "build": "vite build",
    "deploy": "wrangler deploy",
    "db:generate": "drizzle-kit generate",
    "db:migrate:local": "wrangler d1 migrations apply ai-site-starter-db --local",
    "db:migrate:remote": "wrangler d1 migrations apply ai-site-starter-db --remote",
    "typecheck": "tsc --noEmit -p tsconfig.backend.json && tsc --noEmit -p tsconfig.web.json",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write ./src",
    "format:check": "prettier --check .",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:api": "vitest run --project api",
    "test:unit": "vitest run --project unit",
    "test:web": "vitest run --project web",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.7.6",
    "better-auth": "^1.2.0",
    "clsx": "^2.1.1",
    "drizzle-orm": "^0.41.0",
    "hono": "^4.7.0",
    "lucide-react": "^0.564.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-router-dom": "^7.1.0",
    "tailwind-merge": "^3.4.1",
    "uuid": "^13.0.0",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.12.12",
    "@cloudflare/workers-types": "^4.20250109.0",
    "@eslint/js": "^10.0.1",
    "@tailwindcss/vite": "^4.0.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^4.3.0",
    "concurrently": "^9.2.1",
    "drizzle-kit": "^0.31.4",
    "eslint": "9",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.5.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "jsdom": "^28.1.0",
    "miniflare": "^4.20260212.0",
    "prettier": "^3.8.1",
    "tailwindcss": "^4.0.0",
    "typescript": "^5.7.0",
    "typescript-eslint": "^8.55.0",
    "vite": "^6.0.0",
    "vitest": "^4.0.18",
    "wrangler": "^3.99.0"
  }
}
